{
  "name": "file-content-copier",
  "displayName": "File content copier",
  "description": "Copy the content inside of selected files",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/migmm/file-content-copier.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyFilesContent",
        "title": "Copy Content",
        "category": "Files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyFilesContent",
          "when": "!explorerResourceIsFolder && resourceLangId != ''"
        }
      ]
    },
    "activationEvents": []
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.60.0",
    "eslint": "^8.5.0",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.0",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0",
    "ts-loader": "^9.5.1"
  }
}